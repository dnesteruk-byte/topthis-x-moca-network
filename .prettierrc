{
	"$schema": "https://json.schemastore.org/prettierrc.json",
	"useTabs": true,
	"tabWidth": 2,
	"singleQuote": false,
	"semi": true,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"endOfLine": "lf",
	"arrowParens": "always",
	"trailingComma": "es5",
	"printWidth": 100,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss"
	],

	"tailwindFunctions": ["clsx", "tv", "cn"],
	"tailwindPreserveWhitespace": true,
	"tailwindPreserveDuplicates": true,
	"tailwindStylesheet": "./src/shared/styles/global.css",

	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^\\$app/(?!.*(sc|sa|c)ss)",
		"^\\$(?!.*)/(?!.*(sc|sa|c)ss)",
		"^@pages/(?!.*(sc|sa|c)ss)",
		"^@widgets/(?!.*(sc|sa|c)ss)",
		"^@features/(?!.*(sc|sa|c)ss)",
		"^@entities/(?!.*(sc|sa|c)ss)",
		"^@shared/(?!.*(sc|sa|c)ss)",
		"^../(?!.*(sc|sa|c)ss)",
		"^./(?!.*(sc|sa|c)ss)",
		"(.*).(sc|sa|c)ss$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
